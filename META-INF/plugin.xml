<idea-plugin version="2">
  <name>Lua</name>
  <description>Lua language integration</description>
  <version>0.0</version>
  <vendor/>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
      <component>
          <implementation-class>com.sylvanaar.idea.Lua.LuaSupportLoader</implementation-class>
      </component>
      <component>
          <implementation-class>com.sylvanaar.idea.Lua.platform.PlatformDependentToolsInstaller</implementation-class>
      </component>
      <component>
          <implementation-class>com.sylvanaar.idea.Lua.configurator.LuaServersConfiguration</implementation-class>
          <interface-class>com.sylvanaar.idea.Lua.configurator.LuaServersConfiguration</interface-class>
      </component>
      <component>
          <implementation-class>com.sylvanaar.idea.Lua.configurator.LuaConfigurationManager</implementation-class>
          <interface-class>com.sylvanaar.idea.Lua.configurator.LuaConfigurationManager</interface-class>
      </component>
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.sylvanaar.idea.Lua">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>